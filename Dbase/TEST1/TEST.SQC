static void xchecksql(char *file,int line) {
  if(sqlca.sqlcode != SQL_OK) {
    printf("sql failure in %s line %d\n",file,line);
    sqlca.dump();
    exit(-1);
  }
}

#define checkSql() xchecksql(__FILE__,__LINE__)

