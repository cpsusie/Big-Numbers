      createMyTable(); 
      break;
    case CMD_INSERT:
//      insertRowsIntoLilleTable(); 
    insertRowsIntoMyTable();
//      insertRowsIntoTabdate();
      break;
  }
  if(sqlca.sqlcode != SQL_OK)
    sqlca.dump();

  return 0;
}
