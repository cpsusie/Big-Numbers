typedef enum {
  CMD_DROP,
  CMD_CREATE,
  CMD_INSERT,
  CMD_NONE
} Command;

static void usage() {
  fprintf(stderr,"Usage:test [-dcin]\n");
  exit(-1);
}

int main(int argc, char **argv) {
  Command cmd = CMD_INSERT;
  char *cp;
  time_t tt;
  time(&tt);
  srand(tt);
  for(argv++;*argv && *(cp = *argv) == '-';argv++)    
    for(cp++;*cp;cp++) {
      switch(*cp) {
      case 'd':
        cmd = CMD_DROP; continue;
      case 'c':
        cmd = CMD_CREATE; continue;
      case 'i':
        cmd = CMD_INSERT; continue;
      case 'n':
        cmd = CMD_NONE; continue;
      default:usage();
      }
      break;
    }

