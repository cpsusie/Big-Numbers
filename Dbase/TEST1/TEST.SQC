static void selectLilleTable() {
  EXEC SQL
    select 
      " ",
      a.firstcolumn,
      b.firstcolumn,
      date(32,12,2004) + count(a.firstcolumn)
    into
      :firstcolumn,
      :firstcolumn,
      :firstcolumn,
      :dddd2 :s
    from lilletable a,
         lilletable b
    where a.firstcolumn <= "2" and currentdate < #29-2-00#
    group by a.firstcolumn, b.firstcolumn
